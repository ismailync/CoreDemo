@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">


    @if (Model.Count() == 0)
    {
        <h4>Henüz bir yorum yok Yorum EKEL</h4>
    }
    else
    {
        <h4>Yorumlar</h4>
    }
    @foreach (var item in Model)
    {
        <div class="media">
            <img src="~/web/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUserName</h5>
                <p>
                    @item.CommentTitel
                </p>
            </div>
        </div>
    }
</div>